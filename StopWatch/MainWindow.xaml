<Window x:Class="StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StopWatch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height=".2*"/>
            <RowDefinition Height=".2*"/>
        </Grid.RowDefinitions>
        <Label x:Name="Clock" Grid.Row="0" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="150"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="Button_Start" Content="Start" />
            <Button Click="Button_Stop" Content="Stop" />
            <Button Click="Button_Reset" Content="Reset" />
        </StackPanel>
        <ListBox Grid.Row="2" x:Name="elapsedtimeitem"/>
    </Grid>
</Window>
